{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Modifier un utilisateur</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    {{ include('user/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                </div>
            </div>

            <div class="mt-4 text-center">
                <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary px-4">Retour à la liste</a>
            </div>

            <div class="mt-3 text-center">
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}