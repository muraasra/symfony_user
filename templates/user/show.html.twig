{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">User Details</h1>

        <table class="table table-striped table-hover">
            <tbody>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>
                        {% if user.roles %}
                            {% for role in user.roles %}
                                <span class="badge badge-info">{{ role }}</span>
                            {% endfor %}
                        {% else %}
                            <span class="text-muted">No roles assigned</span>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>
                        <span class="badge {{ user.isVerified ? 'badge-success' : 'badge-danger' }}">
                            {{ user.isVerified ? 'Verified' : 'Not Verified' }}
                        </span>
                    </td>
                </tr>
                <tr>
                    <th>Firstname</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th>Phone Number</th>
                    <td>{{ user.phonenumber }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ user.address }}</td>
                </tr>
                <tr>
                    <th>Profile Picture</th>
                    <td>
                        {% if user.profilpicture %}
                            <img src="/uploads/profils/{{ user.profilpicture }}" alt="Profile Picture" class="img-thumbnail" style="width: 100px; height: 100px;">
                        {% else %}
                            <span class="text-muted">No picture uploaded</span>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="mt-4 text-center">
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to List</a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Edit</a>
        </div>

        <div class="mt-3">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
