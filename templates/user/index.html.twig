{% extends 'base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">User Management</h1>

        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Status</th>
                    <th>Firstname</th>
                    <th>Phone Number</th>
                    <th>Address</th>
                    <th>Profile Picture</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {% if user.roles %}
                            {% for role in user.roles %}
                                <span class="badge badge-info">{{ role }}</span>
                            {% endfor %}
                        {% else %}
                            <span class="text-muted">No roles assigned</span>
                        {% endif %}
                    </td>
                    <td>
                        <span class="badge {{ user.isVerified ? 'badge-success' : 'badge-danger' }}">
                            {{ user.isVerified ? 'Verified' : 'Not Verified' }}
                        </span>
                    </td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.phonenumber }}</td>
                    <td>{{ user.address }}</td>
                    <td>
                        {% if user.profilpicture %}
                            <img src="/uploads/profile_pictures/{{ user.profilpicture }}" alt="Profile Picture" class="img-thumbnail" style="width: 50px; height: 50px;">
                        {% else %}
                            <span class="text-muted">No picture uploaded</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-info">Show</a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9" class="text-center text-muted">No users found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="text-right">
            <a href="{{ path('app_user_new') }}" class="btn btn-primary">Create New User</a>
        </div>
    </div>
{% endblock %}
